{% block title %}Welcome!{% endblock %}

{% block body %}

<div class="row">
    <div class="col-6 mx-auto">
         <h1 class="display-4 my-5 text-center">Are you facing any <span class="text-danger">issues</span> ?</h1>
        {{ form_start(form) }}
            {{ form_row(form.name) }}
